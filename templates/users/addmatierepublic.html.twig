{% extends "base.html.twig" %}
{% block main %}
	<section class="d-flex justify-content-between">
		<form action="" method="post" class="mx-auto">
			<h2
				class="text-start my-5">
				{# Modifier #}
				Ajouter une Matière Public
			</h2>
			<label for="exampleFormControlInput1" class="form-label">Nom de la Matière Public :</label>
			<input type="text" class="form-control" name="compagnie" id="exampleFormControlInput1" value="">

			<div class="d-flex justify-content-around mt-4">
				<button type="submit" class="btn btn-primary btn-outline-success text-white">
					Ajouter
				</button>
				<button type="button" class="btn btn-primary btn-outline-danger text-white">Annuler</button>
			</div>
		</form>
		<div class="w-75 my-auto">
			<table class="table border border-3 table-bordered ">
				<thead>
					<tr class="bg-danger">
						<th scope="col">Matière</th>
						<th scope="col">Modifier/Supprimé</th>
					</tr>
				</thead>
				<tbody class="bg-dark text-white">
					<tr>
						<td></td>
						<td></td>
					</tr>
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
